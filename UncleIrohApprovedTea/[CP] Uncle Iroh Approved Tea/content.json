{
    "Format": "2.0.0",

    "ConfigSchema": {
        "TeaRecipes": {
            "Description": "If you want all teas to be craftable in the kitchen.",
            "AllowValues": "true, false",
            "Default": "false",
            "AllowBlank": false,
            "AllowMultiple": false
        },
        "TeaBrewing": {
            "Description": "If you want all teas to be brewable in the Teapot.",
            "AllowValues": "true, false",
            "Default": "true",
            "AllowBlank": false,
            "AllowMultiple": false
        },
        "CustomDehydratorRules": {
            "Description": "Some modifications to dehydrator rules based on the new items.",
            "AllowValues": "true, false",
            "Default": "true",
            "AllowBlank": false,
            "AllowMultiple": false
        },
        "GrainsOverhull": {
            "Description": "Enable if you have the Grains Overhull mod. Will add barley tea as a recipe.",
            "AllowValues": "true, false",
            "Default": "false",
            "AllowBlank": false,
            "AllowMultiple": false
        }
    },

    "Changes": [
        { 
            "LogName": "Objects",
            "Action": "Include",
            "FromFile": "Data/ObjectContent.json"
        },

        {
            "LogName": "Crafting Recipes",
            "Action": "Include",
            "FromFile": "data/Recipes/CraftingRecipes.json"
        },
        {
            "LogName": "Tea Recipes",
            "Action": "Include",
            "FromFile": "data/Recipes/CookingRecipes.json",
            "When": {"TeaRecipes": true }
        },

        {
            "LogName": "Shops",
            "Action": "Include",
            "FromFile": "data/Shops/SeedShop.json"
        },
        {
            "LogName": "Shops",
            "Action": "Include",
            "FromFile": "data/Shops/Sandy.json"
        }
    ]
}